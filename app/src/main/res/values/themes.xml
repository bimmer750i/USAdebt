<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.USADebt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomnavbarcolor">@color/navbarcolor_day</item>
        <item name="android:textViewStyle">@style/textviewstyleday</item>
        <item name="expandbuttoncolor">@color/cyan</item>
        <item name="spinnercolor">@color/navbarcolor_day</item>
        <item name="spinnerdropcolor">@color/navbarcolor_day</item>
    </style>

</resources>